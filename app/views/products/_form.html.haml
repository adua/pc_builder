= form_for @product do |f|
  -if @product.errors.any?
    #error_explanation
      %h2= "#{pluralize(@product.errors.count, "error")} prohibited this product from being saved:"
      %ul
        - @product.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :pid
    = f.text_field :pid
  .field
    = f.label :price
    = f.text_field :price
  .field
    = f.label :rebate
    = f.text_field :rebate
  .actions
    = f.submit 'Save'
